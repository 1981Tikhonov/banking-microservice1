<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.30.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1734032371265-1" author="admin">
        <createTable tableName="account">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_number" type="varchar(255)"/>
            <column name="client_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="created_at" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="client_id"
                                baseTableName="account"
                                constraintName="fk_account_client"
                                referencedColumnNames="id"
                                referencedTableName="client"/>
        <addUniqueConstraint tableName="account" columnNames="account_number" constraintName="uk_account_number"/>
    </changeSet>
</databaseChangeLog>
